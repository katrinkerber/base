  <!-- JavaScript -->
  <script src="../js/libs/jquery-1.9.1.min.js"></script>
    <!-- Styleguide specific -->
      <!-- Google code prettify -->
      <script src="run_prettify.js?autoload=true&amp;skin=desert&amp;lang=css"></script>
      <!-- tabs -->
      <script type="text/javascript">
        $(document).ready(function() {
          var $sections = $('.pagecontent').find('section.tab-content');
          var $links    = $('nav').find('a');

          if(window.location.hash) {
            $sections.hide();
            $('.pagecontent').find('section.tab-content' + window.location.hash).show();
            $('nav').find('a[href="' + window.location.hash + '"]').addClass('current');
          } else {
            $sections.hide();
            $('.pagecontent').find('section.tab-content#notes').show();
            $('nav li:first-child a').addClass('current');
          }

          $links.click(function(){
            var $this  = $(this);
            var target = $(this).attr('href');
            window.location.hash = target;
            $links.not(this).removeClass('current');
            $sections.hide();
            $this.addClass('current');
            $('section' +target).fadeIn(500);
            return false;
          });
        });
      </script>
</body>
