<!-- Add any style guide specific styles here -->
<style>
  @media only screen and (max-width: 43.99em ) {
    header nav li { 
      display: inline-block; 
      padding: 1em 0.5em 1em 0;
    }
  }
  @media only screen and (min-width: 44em ) {
    header { 
      position: fixed;
      left: 0;
      top: 0;
      width: 24%; 
      height: 100%; 
      overflow: auto;
    }
    .pagecontent {
      padding-left: 24%;
    }
    .styleguide-note {
      display: block;
      margin: -0.2rem 0 1.5rem;
      color: #888;
      font-style: italic;
    }
      p + .styleguide-note {
        margin-top: -1.4rem;
      }
  }
  pre { clear: both; padding: 1rem 0;}
  code { border: 1px solid #888; padding: 0;}
</style>
<body>
  <header role="banner">
    <h1>Site title</h1>
    <h2>Style Guide</h2>
    <nav>
      <ul>
        <li><a href="#notes">Code Notes</a></li>
        <li><a href="#colours">Colours</a></li>
        <li><a href="#typography">Typography</a></li>      
        <li><a href="#icons">Icons</a></li> 
