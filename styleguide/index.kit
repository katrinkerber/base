      <!-- tabs -->
      <script type="text/javascript">
        $(document).ready(function() {
          var $sections = $('.pagecontent').find('section.tab-content');
          var $links    = $('nav').find('a');

          if(window.location.hash) {
            $sections.hide();
            $('.pagecontent').find('section.tab-content' + window.location.hash).show();
            $('nav').find('a[href="' + window.location.hash + '"]').addClass('active');
          } else {
            $sections.hide();
            $('.pagecontent').find('section.tab-content#notes').show();
            $('nav li:first-child a').addClass('active');
          }

          $links.click(function(){
            var $this  = $(this);
            var target = $(this).attr('href');
            window.location.hash = target;
            $links.not(this).removeClass('active');
            $sections.hide();
            $this.addClass('active');
            $('section' +target).fadeIn(500);
            return false;
          });
        });
      </script>
